<configuration>

    <!-- Настройка консольного аппендера -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern> <!-- Формат сообщения -->
        </encoder>
    </appender>

    <!-- Настройка уровня логирования -->
    <logger name="com.controllers" level="DEBUG" />

    <!-- Уровень логирования для корневого логгера -->
    <root level="INFO">
        <appender-ref ref="console" />
    </root>

</configuration>
